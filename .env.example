# ==============================
# Общие настройки
# ==============================
COMPOSE_PROJECT_NAME=vms
ENVIRONMENT=development

# ==============================
# Backend Settings
# ==============================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=4
BACKEND_LOG_LEVEL=info
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:80,http://localhost:443

# ==============================
# Database Settings (PostgreSQL)
# ==============================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=vms
POSTGRES_USER=vms_user
POSTGRES_PASSWORD=vms_secure_password_change_me
POSTGRES_MAX_CONNECTIONS=20

# ==============================
# Redis Settings
# ==============================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==============================
# Frontend Settings
# ==============================
FRONTEND_PORT=3000
VITE_API_BASE_URL=http://localhost:8000/api

# ==============================
# Telegram Bot Settings
# ==============================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_WEBHOOK_URL=
TELEGRAM_WEBHOOK_SECRET=

# ==============================
# Storage Settings
# ==============================
STORAGE_PATH=/app/storage
STORAGE_MAX_SIZE_GB=1000
STORAGE_RETENTION_DAYS=30

# ==============================
# Recording Settings
# ==============================
RECORDING_FORMAT=mp4
RECORDING_CODEC=h264
RECORDING_BITRATE=2048
RECORDING_FPS=25
RECORDING_RESOLUTION=1920x1080

# ==============================
# AI Detection Settings
# ==============================
AI_MODEL_PATH=/app/models
AI_CONFIDENCE_THRESHOLD=0.7
AI_DETECT_PERSON=true
AI_DETECT_VEHICLE=true
AI_DETECT_FACE=false

# ==============================
# Security Settings
# ==============================
SECRET_KEY=your-secret-key-change-me-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================
# Nginx Settings
# ==============================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
NGINX_SERVER_NAME=localhost

# ==============================
# Prometheus Settings
# ==============================
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=15d

# ==============================
# Grafana Settings
# ==============================
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=grafana_admin_password_change_me
GRAFANA_SECRET_KEY=grafana_secret_key_change_me

# ==============================
# ONVIF Settings
# ==============================
ONVIF_DISCOVERY_TIMEOUT=5
ONVIF_CONNECTION_TIMEOUT=10

# ==============================
# WebSocket Settings
# ==============================
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# ==============================
# Logging Settings
# ==============================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# ==============================
# LLM Settings (LM Studio / Ollama)
# ==============================
LLM_ENABLED=false
LLM_PROVIDER=lmstudio
LLM_BASE_URL=http://localhost:1234/v1
LLM_MODEL=local-model
LLM_TIMEOUT=30
LLM_MAX_RETRIES=3
LLM_MIN_DELAY_SECONDS=5
LLM_MAX_CONCURRENT_CALLS=1
LLM_EMBEDDING_MODEL=nomic-embed-text
LLM_EMBEDDING_DIMENSION=768
LLM_HEALTH_CHECK_ENABLED=true
LLM_HEALTH_CHECK_TIMEOUT=5
LLM_CACHE_ENABLED=true
LLM_CACHE_TTL_SECONDS=3600
LLM_MAX_REQUEST_SIZE=10000
