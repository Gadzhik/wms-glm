# Application
APP_NAME=VMS Backend
APP_VERSION=1.0.0
DEBUG=False
API_V1_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/vms.db

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Storage
STORAGE_PATH=./data
RECORDINGS_PATH=./data/recordings
ARCHIVE_PATH=./data/archive
EXPORTS_PATH=./data/exports
LIVE_STREAM_PATH=./data/live
RETENTION_DAYS=30
MAX_DISK_USAGE_GB=1000

# Recording
RECORDING_SEGMENT_DURATION_SECONDS=300
MOTION_PRE_BUFFER_SECONDS=5
MOTION_POST_BUFFER_SECONDS=5
CONTINUOUS_FPS=15
MOTION_FPS=15
SCHEDULED_FPS=15

# AI Detection
YOLO_MODEL_PATH=yolov8n.pt
DETECTION_ENABLED=True
DETECTION_CONFIDENCE_THRESHOLD=0.5
DETECTION_INTERVAL_SECONDS=1

# Streaming
HLS_SEGMENT_DURATION=2
LIVE_STREAM_BITRATE_KBPS=1000
LIVE_STREAM_FPS=15
LIVE_STREAM_RESOLUTION=1280x720
HARDWARE_ACCELERATION=

# FFmpeg
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe

# Telegram
TELEGRAM_ENABLED=False
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Logging
LOG_DIR=./logs
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - [%(filename)s:%(lineno)d] - %(message)s
LOG_MAX_FILE_SIZE_MB=50
LOG_BACKUP_COUNT=10
LOG_COMPRESS=True
LOG_MAX_TOTAL_SIZE_MB=2048
LOG_DELETE_OLDEST_WHEN_EXCEED=True
LOG_MAX_AGE_DAYS=30

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# WebSocket
WS_MAX_CONNECTIONS=100
WS_HEARTBEAT_INTERVAL=30
WS_TIMEOUT=60

# Workers
CAMERA_MONITOR_INTERVAL=30
CLEANUP_INTERVAL_HOURS=6
